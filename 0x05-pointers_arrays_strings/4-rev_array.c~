#include "holberton.h"

/**
 * reverse_array - reversing an array
 * @a: an array of integers
 * @n: the number of elements to swap
 *
 * Return: nothing.
 */
void reverse_array(int *a, int n)
{
	int i, b, tmp;

	for (i = 0; a[i] != '\0'; i++)
		;
	for (b = n - 1; b > i; b--)
	{
		tmp = a[b];
		a[b] = a[i];
		a[i] = tmp;
	}
}
